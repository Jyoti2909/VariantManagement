<?xml version="1.0" encoding="utf-8"?>
<toolbarapplet on_click="onToolbarButtonClick" on_load="onToolbarLoad" buttonstyle="windows" buttonsize="26,25" font="Arial-8">
	<toolbar id="tb1">
		<drop_down_button id="view_panels_menu" disabled="true" text="Afficher" tooltip="Panneaux supplémentaires d'affichage"/>
		<choice id="saved_search_project_tree" label="Recherches enregistrées:"/>
		<separator/>
		<drop_down_button id="actions_menu" text="Actions"/>
		<separator/>
		<button image="../images/ProjectExpandAll.svg" id="expand_all" tooltip="Agrandir tout" text="Agrandir tout"/>
		<button image="../images/ProjectCollapseAll.svg" id="collapse_all" tooltip="Réduire tout" text="Réduire tout"/>
		<separator/>

		<button disabled="true" image="../images/AddWBSElement.svg" id="add_wbs_element" tooltip="Ajouter un élément WBS" text="Ajouter un élément WBS"/>
		<button disabled="true" image="../images/AddActivity.svg" id="add_activity" tooltip="Ajouter une activité" text="Ajouter une activité"/>
		<button disabled="true" image="../images/AddMilestone.svg" id="add_milestone" tooltip="Ajouter une phase" text="Ajouter une phase"/>
		<separator/>
		<button disabled="true" image="../images/UnIndent.svg" id="outdent" tooltip="Diminuer" text="Diminuer"/>
		<button disabled="true" image="../images/Indent.svg" id="indent" tooltip="Augmenter" text="Augmenter"/>
		<button disabled="true" image="../images/NextPage.svg" id="move_down" tooltip="Vers le bas" text="Vers le bas"/>
		<button disabled="true" image="../images/PreviousPage.svg" id="move_up" tooltip="Vers le haut" text="Vers le haut"/>
		<separator/>
		<button disabled="true" image="../images/Copy.svg" id="copy" tooltip="Copier" text="Copier"/>
		<button disabled="true" image="../images/Cut.svg" id="cut" tooltip="Couper" text="Couper"/>
		<button disabled="true" image="../images/Paste.svg" id="paste" tooltip="Coller" text="Coller"/>
		<separator/>
		<button disabled="true" image="../images/Deliverable.svg" id="add_existing_deliverable" tooltip="Ajouter un livrable existant" text="Ajouter un livrable existant"/>
		<button disabled="true" image="../images/NewDeliverable.svg" id="add_new_deliverable" tooltip="Ajouter un nouveau livrable" text="Ajouter un nouveau livrable"/>
		<separator/>
		<button image="../images/EditItem.svg" id="view_edit_selected_item" tooltip="Afficher/Modifier l'item sélectionné" text="Afficher/Modifier l'item sélectionné"/>
		<button disabled="true" image="../images/Delete.svg" id="delete_selected_item" tooltip="Supprimer l'item sélectionné" text="Supprimer l'item sélectionné"/>
		<button image="../images/Schedule.svg" id="execute_scheduling" tooltip="Exécuter la planification" text="Exécuter la planification"/>
		<button disabled="true" image="../images/UpdateActivity.svg" id="open_completion_dialog" tooltip="Ouvrir la fenêtre de l'accomplissement" text="Ouvrir la fenêtre de l'accomplissement"/>
		<button disabled="false" image="../images/Print.svg" id="print" tooltip="Imprimer" text="Imprimer"/>
		<button image="../images/GanttChart.svg" id="show_gantt_chart" tooltip="Afficher le diagramme Gantt" text="Afficher le diagramme Gantt"/>
		<button image="../images/ExecuteSearch.svg" id="execute_filter" tooltip="Appliquer le Filtre" text="Appliquer le Filtre"/>
		<button image="../images/ClearSearchCriteria.svg" id="clear_filter" tooltip="Nettoyer le Filtre" text="Nettoyer le Filtre"/>
		<separator />
		<choice id="gantt_time_delta" label="Timeline:" invisible="true">
			<choiceitem id="day">Day</choiceitem>
			<choiceitem id="week">Week</choiceitem>
			<choiceitem id="month">Month</choiceitem>
			<choiceitem id="quarter">Quarter</choiceitem>
			<choiceitem id="year">Year</choiceitem>
		</choice>
		<button state="true" image="../images/ShowDependencyLinks.svg" id="gantt_dependency_links" tooltip="Afficher les liens de dépendance" text="Afficher les liens de dépendance" invisible="true" />
		<button state="true" image="../images/ShowCompletionProgress.svg" id="gantt_completion_progress" tooltip="Afficher le progrès d'accomplissement" text="Afficher le progrès d'accomplissement" invisible="true" />
		<button state="true" image="../images/ShowTaskFloat.svg" id="gantt_task_float" tooltip="Afficher la position de la tâche" text="Afficher la position de la tâche" invisible="true" />
	</toolbar>
</toolbarapplet>